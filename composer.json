{
  "name": "phpgt/csrf",
  "description": "Automatic protection from Cross-Site Request Forgery.",
  "type": "library",

  "require": {
    "php": ">=7.0.0",
    "phpgt/dom": "*",
    "ircmaxell/random-lib": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.1",
    "phpunit/php-code-coverage": "*",
    "ext-xdebug": "*",
    "fabpot/php-cs-fixer": "^1.11.2",
    "phpdocumentor/phpdocumentor": "^2.8.5"
  },
  "minimum-stability": "stable",
  "scripts": {
    "test": "./vendor/bin/phpunit -c ./phpunit.xml",
    "fix": "./vendor/bin/php-cs-fixer fix",
    "docs": "vendor/bin/phpdoc -d src/ -t docs"
  },

  "license": "MIT",

  "authors": [
    {
      "name": "James Fellows",
      "email": "mrfellows@gmail.com"
    }
  ],

  "autoload": {
    "psr-4": {
      "phpgt\\csrf\\": "./src"
    }
  }
}
